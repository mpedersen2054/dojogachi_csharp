@{
    ViewData["Title"] = "Dachi";
}

<div class="row">
<div class="col-md-8 col-md-offset-2 dachi-container">

<div class="row dachi-stats">
    <div class="col-md-3">
        <div class="stat">
            Fullness <span class="fullness">@ViewBag.Fullness</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat">
            Happiness <span class="happiness">@ViewBag.Happiness</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat">
            Energy <span class="energy">@ViewBag.Energy</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat">
            Meals <span class="meals">@ViewBag.Meals</span>
        </div>
    </div>
</div>

<div class="row dachi-main">
    <div class="col-md-12">
        <img src="/images/face1.jpg" class="dachi-img">
    </div>
</div>

<div class="row dachi-info">
    <div class="col-md-12">
        <div class="message">No messages.</div>
    </div>
</div>

<div class="row dachi-btns">
    <div class="col-md-12">
        <button class="feed-btn btn btn-primary btn-lg">Feed</button>
        <button class="play-btn btn btn-primary btn-lg">Play</button>
        <button class="work-btn btn btn-primary btn-lg">Work</button>
        <button class="sleep-btn btn btn-primary btn-lg">Sleep</button>
    </div>
</div>

</div>
</div>